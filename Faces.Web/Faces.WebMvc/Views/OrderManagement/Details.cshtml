@model FaceWebMvc.ViewModels.OrderViewModel
@{

    ViewData["Title"] = "Order Details";
}
<h3>  Order Details</h3>
Order Id: @Model.OrderId
User Email: @Model.UserEmail
Picture:
<img src="@Model.ImageString" width="100" height="100" />
Order Status: @Model.OrderStatus
<table class="table">
    <thead>
        <tr>
            <th>OrderDetailId</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>

        @foreach(var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.OrderDetailId</td>
                <td><img src="@detail.ImageString" width="40" height="40" /></td>
            </tr>
        }
    </tbody>
</table>